FROM node:18-alpine

# Create app directory
WORKDIR /app

# Copy required config files
COPY package*.json ./

COPY tsconfig.json ./

COPY tsconfig.base.json ./

# Install app dependencies
RUN npm install

# Copy app source to the image
COPY . .

RUN npm run build

# Expose the app on port 3000
EXPOSE 3000

# Command to run the application
CMD ["npm", "start"]